    display: inline-block;
    vertical-align: top;
    width: 25%;
    text-align: left;
    padding-left: 30px;

    &.first { margin-left:0; }

    @include breakpoint(small) {
      display: block;
      width:60%;
      min-width:290px;
      margin:0 auto 30px;
      margin-bottom:30px;
      padding-left:0px;

      &.first { margin:0 auto 30px; }
