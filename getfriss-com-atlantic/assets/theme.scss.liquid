        &.overlay {
          box-shadow: inset 0px 0px 0px 1px rgba(0, 0, 0, 0.1);
        }
      }
    }

    .details {
      width:68%;
      padding-left:30px;

      .brand {
        font-size:10px;
        margin:5px 0 0;
        @extend .uc-title;

        a { color: $light-text-color; }
      }
      .title {
        font-size:16px;
        color: $accent-color;
        margin:14px 0 0;

        a { color: $accent-color; }
      }
      .price {
        font-size:14px;
        color: $text-color;
        margin:16px 0 0;

        .label {
          color: $title-color;
          margin-right: 5px;
        }
        .original {
          text-decoration: line-through;
          margin-right: 2px;
        }
      }
    }

  }

  .pagination {
    padding-bottom:40px;
  }

}

