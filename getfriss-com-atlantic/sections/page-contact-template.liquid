<div data-section-id="{{ section.id }}" data-section-type="page-contact-template">

  <main class="content content-area">

    {% include 'breadcrumbs' %}

    <div class="page-title">
      <h1 class="label">{{ page.title }}</h1>
    </div>

    <div class="text-content-wrap clearfix">
      <div class="rte clearfix text-content {% if page.content.size > 0 %}has-sidebar{% endif %}">
        {{ page.content }}
      </div>

      <div class="{% if page.content.size > 0 %}sidebar{% else %}full-width-form{% endif %} rte">
        {% include 'contact-form'%}
      </div>
    </div>

  </main>

</div>

{% schema %}
{
  "name": "Contact page",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "show-breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    }
  ]
}

{% endschema %}