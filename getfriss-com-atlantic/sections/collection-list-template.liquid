<div data-section-id="{{ section.id }}" data-section-type="collection-list-template">

  {% assign using-linklist = false %}
  {% if linklists['all-collections'] and linklists['all-collections'].links.size > 0 %}
    {% assign using-linklist = true %}
  {% endif %}

  <section class="content content-area">

    {% include 'breadcrumbs' %}

    <div class="page-title">
      <h1 class="label">{{ 'collections.listing.header' | t }}</h1>
    </div>

    <section class="collections">
      {% if using-linklist %}
        {% for link in linklists['all-collections'].links %}{% include 'collection-list-item' with 'linklist' %}{% endfor %}
      {% else %}
        {% for collection in collections %}{% include 'collection-list-item' with 'linklist' %}{% endfor %}
      {% endif %}
    </section>

  </section>

</div>

{% schema %}
{
  "name": "Collection listings",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "show-breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    }
  ]
}

{% endschema %}