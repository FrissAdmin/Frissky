{
  "name": "frissky",
  "version": "1.0.0",
  "description": "Online beauty app",
  "main": "index.html",
  "scripts": {
    "build:client": "NODE_ENV=production webpack -p --config webpack.config.prod.js",
    "build:server": "BABEL_ENV=production babel --source-maps -d ./build/server/ ./src/server/ && cp ./src/server/index.html ./build/server/",
    "build": "npm run build:client && npm run build:server",
    "clean:client": "rm -rf dist && mkdir dist",
    "clean:server": "rm -rf build && mkdir -p build/server",
    "clean": "npm run clean:client && npm run clean:server",
    "deploy": "npm run clean && npm run build",
    "dev:client": "webpack-dev-server --hot --inline --config webpack.config.dev.js",
    "dev:server": "babel-node src/server/index.js",
    "dev": "npm run dev:client & npm run dev:server",
    "postinstall": "npm run deploy",
    "start": "node build/server/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FrissAdmin/Frissky.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FrissAdmin/Frissky/issues"
  },
  "homepage": "https://github.com/FrissAdmin/Frissky#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-jsx-control-statements": "^3.2.8",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "compression-webpack-plugin": "^1.1.2",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "graphql": "^0.11.0",
    "graphql-server-express": "^1.3.0",
    "graphql-subscriptions": "^0.5.6",
    "graphql-tools": "^2.13.0",
    "immutable": "^3.8.2",
    "jsonwebtoken": "^8.1.0",
    "node-sass": "^4.7.2",
    "pg": "^7.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-immutable-proptypes": "^2.1.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-immutable": "^4.0.0",
    "redux-promise-middleware": "^5.0.0",
    "sass-loader": "^6.0.6",
    "sass-resources-loader": "^1.3.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.9.1",
    "webpack-graphql-loader": "0.0.19"
