{
  "parser": "babel-eslint",

  "plugins": [
    "react",
    "jsx-control-statements",
  ],

  "extends": [
    "airbnb",
    "plugin:jsx-control-statements/recommended",
  ],

  "settings": {
  },

  "rules": {
    // throw errors on these
    "comma-dangle"                 : 2,
    "function-paren-newline"       : [2, "consistent"],
    "import/prefer-default-export" : 2,
    "no-extra-boolean-cast"        : 2,
    "no-mixed-operators"           : 2,
    "no-param-reassign"            : [2, { props: false }],
    "no-restricted-globals"        : [2, "event"],
    "prefer-const"                 : 2,
    "react/jsx-curly-spacing"      : [2, "always", { allowMultiline: true, spacing: { objectLiterals: "never" }}],
    "react/jsx-no-target-blank"    : 2,
    "react/jsx-no-undef"           : [2, { "allowGlobals": true }],
    "react/jsx-sort-props"         : [2, { "reservedFirst": false }],
    "react/no-array-index-key"     : 2,
    "react/self-closing-comp"      : 2,
    "react/sort-prop-types"        : 2,

    "max-len": [2, {
      "code"           : 100,
      "ignoreComments" : true,
      "ignorePattern"  : "^import\\s.*;$",
      "ignoreUrls"     : true,
    }],

    // these rules are disabled because they're very slow and hardly ever violated
    "import/no-absolute-path"           : 0,
    "import/no-duplicates"              : 0,
    "import/no-named-as-default-member" : 0,
    "import/no-named-as-default"        : 0,
    "react/jsx-no-bind"                 : 0,
    "react/no-deprecated"               : 0,
    "react/no-string-refs"              : 0,
    "react/prefer-es6-class"            : 0,
    "react/require-render-return"       : 0,

    // let's slowly turn these one one at a time - they're very noisy right now
    // props
    "react/forbid-prop-types" : 0,
    "react/prop-types"        : 0,

    // syntax
    "react/jsx-first-prop-new-line": 0,

    // component structure
    "class-methods-use-this"          : 0,
    "react/prefer-stateless-function" : 0,
    "react/require-default-props"     : 0,
    "react/sort-comp"                 : 0,

    // accessibility
    "jsx-a11y/anchor-has-content"             : 0,
    "jsx-a11y/anchor-is-valid"                : 0,
    "jsx-a11y/label-has-for"                  : 0,
    "jsx-a11y/no-static-element-interactions" : 0,

    // this rule seems to be broken, reports on unusual things
    "react/jsx-indent" : 0,

    // these should always be disabled
    "arrow-parens"                       : 0,
    "flowtype/space-before-type-colon"   : 0,
    "global-require"                     : 0,
    "import/extensions"                  : 0,
    "import/first"                       : 0,
    "import/no-dynamic-require"          : 0,
    "import/no-extraneous-dependencies"  : 0,
    "import/no-unresolved"               : 0,
    "import/no-webpack-loader-syntax"    : 0,
    "key-spacing"                        : 0,
    "no-extra-parens"                    : [0, "functions"],
    "no-lonely-if"                       : 0,
    "no-multi-spaces"                    : 0,
    "no-plusplus"                        : 0,
    "no-return-assign"                   : 0,
    "no-underscore-dangle"               : 0,
    "no-useless-escape"                  : 0,
    "react/jsx-closing-bracket-location" : 0,
    "react/jsx-filename-extension"       : 0,
    "react/no-danger"                    : 0,
    "react/no-unused-prop-types"         : 0,
  },

  "env": {
    "browser": true,
    "mocha": true,
  },

  "globals": {
    "__webpack_public_path__" : true,
    "whatInput"               : true,
  },
}
